# Server port
PORT=3000

# Twilio Credentials
TWILIO_ACCOUNT_SID="ACXXXXXXXXXXXXXXXXX"
TWILIO_AUTH_TOKEN="XXXXXX"
TWILIO_PHONE_NUMBER="+12223334444"

# Supabase (server key only lives on server side)
SUPABASE_URL=https://YOUR-PROJECT.supabase.co
SUPABASE_SERVICE_KEY=YOUR_SERVICE_ROLE_KEY

# MQTT (HiveMQ/EMQX)
# For HiveMQ Cloud:
MQTT_URL=mqtts://<your-cluster>.s1.eu.hivemq.cloud:8883
MQTT_USER=app-server
MQTT_PASS=supersecret

# Topic shapes (usually no change)
MQTT_CMD_TEMPLATE=devices/{device_id}/cmd
MQTT_RESP_WILDCARD=devices/+/resp

# Timeouts / behavior
READ_TIMEOUT_MS=5000